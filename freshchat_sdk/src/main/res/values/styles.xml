    <!-- FAQ Category Styling & Customizations -->

    <style name="Widget.Freshchat.CategoryList">
        <item name="android:background">@null</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Widget.Freshchat.CategoryListItem">
        <item name="android:background">@drawable/freshchat_faq_category_listitem_bg</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.Freshchat.CategoryAltIcon">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/freshchat_category_alt_text_bg</item>
        <item name="android:layout_margin">@dimen/freshchat_category_icon_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">@dimen/freshchat_category_icon_alt_view_size</item>
        <item name="android:layout_height">@dimen/freshchat_category_icon_alt_view_size</item>
    </style>

    <style name="TextAppearance.Freshchat.CategoryName" parent="TextAppearance.Freshchat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Freshchat.CategoryDescription" parent="TextAppearance.Freshchat"></style>

    <style name="TextAppearance.Freshchat.FAQListEmptyText" parent="TextAppearance.Freshchat.Medium"></style>



    <!-- FAQ List Styling & Customizations -->

    <style name="Widget.Freshchat.ArticleList">
        <item name="android:divider">@color/freshchat_article_list_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Widget.Freshchat.ArticleListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextAppearance.Freshchat.ArticleTitle" parent="TextAppearance.Freshchat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- FAQ Styling & Customizations -->

    <style name="Widget.Freshchat.ArticleVotingPromptText">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">4dp</item>
        <item name="android:text">@string/freshchat_faq_voting_prompt</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Freshchat.ArticleUpvoteButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:text">@string/freshchat_faq_upvote</item>
    </style>

    <style name="Widget.Freshchat.ArticleDownvoteButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:text">@string/freshchat_faq_downvote</item>
    </style>


    <!-- Common -->

    <style name="TextAppearance.Freshchat.ContactUs" parent="TextAppearance.Freshchat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
