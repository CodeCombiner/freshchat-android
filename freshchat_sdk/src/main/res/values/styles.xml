<resources>

    <style name="Widget" />

    <style name="Widget.Freshchat" />

    <style name="TextAppearance.Freshchat" parent="TextAppearance.AppCompat"></style>

    <style name="TextAppearance.Freshchat.Small" parent="TextAppearance.AppCompat.Small"></style>

    <style name="TextAppearance.Freshchat.Medium" parent="TextAppearance.AppCompat.Medium"></style>

    <style name="TextAppearance.Freshchat.Large" parent="TextAppearance.AppCompat.Large"></style>

    <!-- Message Styling & Customizations -->

    <style name="Widget.Freshchat.MessageList">
        <item name="android:background">@drawable/freshchat_message_list_bg</item>
        <item name="android:divider">@color/freshchat_message_list_divider</item>
        <item name="android:dividerHeight">@dimen/freshchat_message_lisitem_divider_height</item>
        <item name="android:stackFromBottom">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:transcriptMode">alwaysScroll</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="Widget.Freshchat.MessageListItem">
        <item name="android:background">@color/freshchat_message_list_item_bg</item>
    </style>

    <style name="Widget.Freshchat.MessageDeepLinkButton" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.MessageDeepLink</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/freshchat_chat_deeplink</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="Widget.Freshchat.MessageReplyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:hint">@string/freshchat_chat_message_composer_hint</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">@dimen/freshchat_message_send_icon_size</item>
        <item name="android:maxLines">4</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/freshchat_message_reply_text</item>
        <item name="android:textColorHint">@color/freshchat_message_reply_hint_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Freshchat.MessageReplyView">
        <item name="android:background">@color/freshchat_message_reply_view_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/freshchat_message_reply_frame_min_height</item>
    </style>

    <style name="TextAppearance.Freshchat.AgentName" parent="TextAppearance.Freshchat.Small">
        <item name="android:textColor">@color/freshchat_text_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Freshchat.UserMessage" parent="TextAppearance.Freshchat.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Freshchat.AgentMessage" parent="TextAppearance.Freshchat.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Freshchat.UserMessageTime" parent="TextAppearance.Freshchat.Small">
        <item name="android:textColor">@color/freshchat_text_color</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.Freshchat.AgentMessageTime" parent="TextAppearance.Freshchat.Small">
        <item name="android:textColor">@color/freshchat_text_color</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.Freshchat.MessageDeepLink" parent="TextAppearance.Freshchat.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Freshchat.VoiceMessageDuration" parent="TextAppearance.Freshchat.Small">
        <item name="android:textColor">@color/freshchat_text_color</item>
    </style>

    <style name="Widget.Freshchat.ConversationBannerMessage">
        <item name="android:background">@color/freshchat_contact_us_btn_bg_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Chat Resolution Widget Styles -->

    <style name="Widget.Freshchat.ChatResolutionConfirmationPromptView">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.Freshchat.ChatResolutionConfirmationPromptText">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:text">@string/freshchat_chat_resolution_confirmation_prompt</item>
    </style>


    <style name="Widget.Freshchat.ChatResolutionPositiveButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:text">@string/freshchat_chat_resolution_confirmation_prompt_positive</item>
    </style>

    <style name="Widget.Freshchat.ChatResolutionNegativeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:text">@string/freshchat_chat_resolution_confirmation_prompt_negative</item>
    </style>


    <!-- Customer Survey Dialog Customizations -->

    <style name="Widget.Freshchat.CustomerSurveyQuestionStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">@integer/freshchat_custsat_question_max_lines</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Freshchat.CustomerSurveyCommentsEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:hint">@string/freshchat_chat_resolution_user_comments_hint</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Freshchat.CustomerSurveyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


